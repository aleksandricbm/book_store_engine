%main.container.general-main-wrap
  .text-center
    %h3.general-login-title= t('.sign_up')
    %a.general-login-icon{href: user_facebook_omniauth_authorize_path}
      %i.fa.fa-facebook-official
    %p.general-login-text or
  = form_for resource, as: resource_name, url: registration_path(resource_name), role: 'form', html: {class: "general-form"} do |f|
    = devise_error_messages!
    .form-group.mb-30
      %label.control-label.input-label{for: "email"}= t('devise.new.enter_email')
      = f.email_field :email, class: 'email form-control', placeholder: t('devise.sessions.new.enter_email'), autofocus: true
      %label.control-label.input-label{for: "password"}= t('devise.sessions.new.enter_password')
      = f.password_field :password, class: 'form-control form-control-sm', placeholder: t('devise.sessions.new.enter_password'), autocomplete: 'off'
      -# if @minimum_password_length
        .help-block.devise
        = t('devise_forms.message.minimum_password_length', min_len: @minimum_password_length)
      %label.control-label.input-label{for: "password_confirmation"}=t('.password_confirm_placeholder')
      = f.password_field :password_confirmation, class: 'form-control form-control-sm', placeholder: t('.password_confirm_placeholder'), autocomplete: 'off'
      = render "devise/shared/forgot"
    .form-group.mb-30
      .text-center
        = f.submit t('.sign_up'), class: 'btn btn-default mb-20'
        %br/
        = render "devise/shared/links"
